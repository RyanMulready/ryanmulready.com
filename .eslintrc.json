{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "@nuxtjs/eslint-config-typescript",
        "plugin:nuxt/recommended",
        "airbnb-base",
        "plugin:prettier/recommended"
    ],

    "rules": {
        "prettier/prettier": ["error"],
        "import/no-unresolved": "off",
        "@typescript-eslint/no-unused-vars": "off",
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "js": "never",
                "jsx": "never",
                "ts": "never",
                "tsx": "never"
            }
        ],

        "import/no-extraneous-dependencies": [
            "error",
            {
                "devDependencies": [
                    "**/*config*",
                    "**/*spec*"
                ]
            }
        ]
    },
    "globals": {
        "NodeJS": true,
        "$fetch": true,
        "$github": true
    }
}
